*{margin:0;padding:0;box-sizing:border-box}body{font-family:-apple-system,BlinkMacSystemFont,segoe ui,Roboto,Oxygen,Ubuntu,Cantarell,sans-serif;line-height:1.6;color:#333;background-color:#f8f9fa}.container{max-width:1200px;margin:0 auto;padding:0 20px}header{background-color:#fff;box-shadow:0 2px 4px rgba(0,0,0,.1);position:sticky;top:0;z-index:100}nav{padding:1rem 0}nav .container{display:flex;justify-content:space-between;align-items:center}.logo{font-size:1.5rem;font-weight:700;text-decoration:none;color:#333}.nav-menu{display:flex;list-style:none;gap:2rem}.nav-menu a{text-decoration:none;color:#666;transition:color .3s ease}.nav-menu a:hover{color:#007bff}.hero{text-align:center;padding:4rem 0;background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);color:#fff;margin-bottom:3rem}.hero h1{font-size:3rem;margin-bottom:1rem}.hero p{font-size:1.2rem;opacity:.9}.posts{margin-bottom:3rem}.posts h2{text-align:center;margin-bottom:2rem;font-size:2rem}.posts-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:2rem;margin-bottom:2rem}.post-card{background:#fff;border-radius:8px;padding:1.5rem;box-shadow:0 2px 4px rgba(0,0,0,.1);transition:transform .3s ease,box-shadow .3s ease}.post-card:hover{transform:translateY(-2px);box-shadow:0 4px 8px rgba(0,0,0,.15)}.post-meta{display:flex;gap:1rem;margin-bottom:1rem;font-size:.9rem;color:#666}.category{background-color:#007bff;color:#fff;padding:.2rem .5rem;border-radius:4px;font-size:.8rem}.post-card h3{margin-bottom:1rem}.post-card h3 a{text-decoration:none;color:#333}.post-card h3 a:hover{color:#007bff}.post-tags{display:flex;gap:.5rem;margin-top:1rem;flex-wrap:wrap}.tag{background-color:#e9ecef;color:#666;padding:.2rem .5rem;border-radius:4px;font-size:.8rem}.btn{display:inline-block;padding:.75rem 1.5rem;background-color:#007bff;color:#fff;text-decoration:none;border-radius:4px;transition:background-color .3s ease}.btn:hover{background-color:#0056b3}.more-posts{text-align:center}.post{background:#fff;border-radius:8px;padding:2rem;margin:2rem 0;box-shadow:0 2px 4px rgba(0,0,0,.1)}.post-header{margin-bottom:2rem;padding-bottom:1rem;border-bottom:1px solid #e9ecef}.post-header h1{font-size:2.5rem;margin-bottom:1rem}.post-content{font-size:1.1rem;line-height:1.8}.post-content h2,.post-content h3{margin:2rem 0 1rem}.post-content p{margin-bottom:1rem}.post-content ul,.post-content ol{margin:1rem 0;padding-left:2rem}.post-content blockquote{border-left:4px solid #007bff;padding-left:1rem;margin:1rem 0;font-style:italic;color:#666}.post-footer{margin-top:2rem;padding-top:1rem;border-top:1px solid #e9ecef}.post-navigation{display:flex;justify-content:space-between}.prev-post,.next-post{text-decoration:none;color:#007bff}.page-header{text-align:center;margin-bottom:3rem}.page-header h1{font-size:2.5rem;margin-bottom:1rem}.post-item{background:#fff;border-radius:8px;padding:1.5rem;margin-bottom:1.5rem;box-shadow:0 2px 4px rgba(0,0,0,.1)}.post-item h2{margin-bottom:1rem}.post-item h2 a{text-decoration:none;color:#333}.post-item h2 a:hover{color:#007bff}footer{background-color:#333;color:#fff;text-align:center;padding:2rem 0;margin-top:3rem}footer a{color:#007bff;text-decoration:none}footer a:hover{text-decoration:underline}@media(max-width:768px){.nav-menu{flex-direction:column;gap:1rem}.hero h1{font-size:2rem}.posts-grid{grid-template-columns:1fr}.post-header h1{font-size:2rem}.post-navigation{flex-direction:column;gap:1rem}}